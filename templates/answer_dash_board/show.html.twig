{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ answer.content }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ answer.username }}</td>
            </tr>
            <tr>
                <th>Votes</th>
                <td>{{ answer.votes }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ answer.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ answer.updatedAt ? answer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_answer_dash_board_index') }}">back to list</a>

    <a href="{{ path('app_answer_dash_board_edit', {'id': answer.id}) }}">edit</a>

    {{ include('answer_dash_board/_delete_form.html.twig') }}
{% endblock %}
